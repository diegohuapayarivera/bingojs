<div class="row">
  <div class="col-4">
    <h2>Participantes</h2>
    <div class="card" style="width: 18rem;">
      <ul class="list-group list-group-flush">
        {{#each bu}}
          <li class="list-group-item shadow m-1 bg-body rounded">
            <div class="d-inline p-2 bg-primary text-white">
              {{nombre}}
            </div>
            <strong>
              x{{cantidad}}
            </strong>
          </li>
        {{/each}}

      </ul>
    </div>
  </div>
  <div class="col-8">
    <h2 class="text-center">Premios</h2>

    <div class="row row-cols-3">

      {{#each premios}}
        <div class="col">
          <div class="card">
            <div class="card-header">
              {{codigo}}ยบ Premio
            </div>
            <div class="card-body">
              <ul>
                <li>{{premiouno}}</li>
                <li>{{premiodos}}</li>
              </ul>
              <a href="/premio/{{codigo}}" class="btn btn-primary">Sortear</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>