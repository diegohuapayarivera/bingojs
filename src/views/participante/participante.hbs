<div class="row">
  <div class="col-sm-4">
    <div class="card">
      <div class="card-header">
        Participante
      </div>
      <div class="card-body">
        <form action="/participante/add" method="post">
          <div class="mt-3">
            <input
              type="text"
              class="form-control"
              name="nombre"
              placeholder="Nombre"
              value="{{nombre}}"
              autofocus
            />
          </div>
          <div class="mt-3">
            <input
              type="text"
              class="form-control"
              name="referencia"
              placeholder="Referencia"
              value="{{referencia}}"
            />
          </div>
          <div class="mt-3">
            <input
              type="text"
              class="form-control"
              name="telefono"
              placeholder="Telefono"
              value="{{telefono}}"
            />
          </div>
          <div class="mt-3">
            <input
              type="number"
              class="form-control"
              name="cantidad"
              placeholder="Cantidad"
              min="0"
              max="50"
            />
          </div>
          <div class="mt-3">
            <select class="form-select" aria-label="Default select example" name="grupo">
              <option value="0" selected>Selecciona un grupo</option>
              <option value="jesus">Jesus</option>
              <option value="giarcarlo">Giancarlo</option>
            </select>
          </div>
          <div class="mt-3">
            <button
              type="submit"
              class="btn btn-primary w-100"
            >Registrar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="card">
      <div class="card-header">
        Participante
      </div>
      <div class="card-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Referencia</th>
              <th>Telefono</th>
            </tr>
          </thead>
          
        </table>
      </div>
    </div>
  </div>
</div>